<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/recieverProfileImage"
       android:layout_width="45dp"
       android:layout_height="45dp"
       android:layout_marginLeft="4dp"
       android:background="@drawable/ic_brightness_1_white_24dp"
       />

    <TextView
        android:id="@+id/typing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typing ....."
        android:background="@drawable/typing_bg"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_white">

        <TextView
        android:id="@+id/textViewChatMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="7dp"
        android:paddingRight="12dp"
        android:paddingBottom="7dp"
        android:text="Start"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_iv"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewChatSent"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/chat_sent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewChatSeen"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/chat_seen"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewChatSentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sent Date"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="1dp"
        android:padding="2dp"
        android:gravity="end"
        android:textColor="#000"
        android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>
